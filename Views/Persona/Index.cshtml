@model IEnumerable<CrudNetCore5.Models.Persona>
@{
    ViewData["Title"] = "Lista de Personas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container" style="margin:auto 0px; width:100%;">
    @if (TempData["mensaje"] != null)
    {
        <div id="alert-mensaje" class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" date-dismiss="alert" aria-label="Close" onclick="return Confirmar();" >
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }

    <div class="row">   
        <div class="col-sm-10">
            <h3 class="h3">Lista de Personas</h3>
        </div>

        <div class="col-sm-2" style="margin-top:29px;">
            <a class="btn waves-effect waves-light" type="submit" name="action" asp-action="Create" asp-controller="Persona">
                Nuevo<i class="material-icons right">send</i>
            </a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="highlight">
                <thead>
                    <tr>
                        <td style="font-weight: bold;">@Html.DisplayNameFor(m=>m.Id)</td>
                        <td style="font-weight: bold;">@Html.DisplayNameFor(m=>m.Nombre)</td>
                        <td style="font-weight: bold;">@Html.DisplayNameFor(m=>m.Apellido)</td>
                        <td style="font-weight: bold;">@Html.DisplayNameFor(m=>m.NroDocumento)</td>
                        <td style="font-weight: bold;">@Html.DisplayNameFor(m=>m.Telefono)</td>
                        <td style="font-weight: bold;">@Html.DisplayNameFor(m=>m.CorreoElectronico)</td>
                        <td style="font-weight: bold;">@Html.DisplayNameFor(m=>m.FechaNacimiento)</td>
                        <td style="font-weight: bold;">Acciones</td>
                    </tr>
                </thead>
               <tbody>
                   @foreach(var item in Model){
                        
                       <tr>
                            <td>@item.Id</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.NroDocumento</td>
                            <td>@item.Telefono</td>
                            <td>@item.CorreoElectronico</td>
                            <td>@item.FechaNacimiento</td>
                            <td>
                                <a asp-controller="Persona" asp-action="Edit" asp-route-id="@item.Id" class="waves-effect waves-light btn">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a asp-controller="Persona" asp-action="Delete" asp-route-id="@item.Id" class="waves-effect waves-light btn">
                                    <i class="material-icons">delete_forever</i>
                                </a>
                            </td>
                       </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <p>No existen registros</p>
        }

    </div>
</div>

<script>

    function Confirmar() {

       
       
        document.getElementById("alert-mensaje").style.display = "none";
        return true;

    }
    
   
</script>
